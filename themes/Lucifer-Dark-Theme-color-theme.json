{
  "name": "Lucifer Terminal Dark (Hacker Edition)",
  "type": "dark",
  "colors": {
    // --- Core Editor (Deep Terminal Black Base with a hint of blue) ---
    "editor.background": "#0B0E14", // Deeper, slightly richer black
    "editor.foreground": "#E0E8F0", // Soft, cool white for main text

    // --- Selection & Highlighting (Electric Blue/Cyan Glow) ---
    "editor.selectionBackground": "#2A5B8080", // More vibrant, slightly translucent blue
    "editor.selectionHighlightBackground": "#2A5B8040",
    "editor.lineHighlightBackground": "#161B24", // Subtle shift from editor background
    "editor.wordHighlightBackground": "#3D4A5Caa", // Slightly more defined highlight
    "editor.wordHighlightStrongBackground": "#3D4A5C66",
    "editor.findMatchBackground": "#FFD33D44", // Yellow remains, but more defined
    "editor.findMatchHighlightBackground": "#FFD33D22",

    // --- Cursor & Line Numbers (Bright Accents) ---
    "editorCursor.foreground": "#69FFC9", // Brighter, purer green for the cursor
    "editorLineNumber.foreground": "#4F5968", // Muted for readability
    "editorLineNumber.activeForeground": "#8FD4C1", // A subtle green for active line number

    // --- Sidebar & Panel Hierarchy (Clearer Separation) ---
    "sideBar.background": "#0F131A", // Distinct from editor background
    "sideBar.foreground": "#CBD5E0",
    "sideBar.border": "#2C3540", // Stronger border for separation
    "sideBarSectionHeader.background": "#1B2028",
    "sideBarSectionHeader.foreground": "#F0F6FC",

    // --- Activity Bar (Striking Active Indicator) ---
    "activityBar.background": "#0F131A",
    "activityBar.foreground": "#7E8C9A",
    "activityBar.activeBorder": "#69FFC9", // Bright green active border
    "activityBar.activeBackground": "#2A5B8022", // Subtle blue background for active
    "activityBar.border": "#2C3540",

    // --- Tabs (Crisp & Focused) ---
    "tab.activeBackground": "#0B0E14", // Matches editor background for continuity
    "tab.activeForeground": "#E0E8F0",
    "tab.activeBorder": "#69FFC9", // Bright green border on active tab
    "tab.activeBorderTop": "#69FFC9",
    "tab.inactiveBackground": "#1B2028",
    "tab.inactiveForeground": "#7E8C9A",
    "tab.border": "#2C3540",

    // --- Title Bar ---
    "titleBar.activeBackground": "#0F131A",
    "titleBar.activeForeground": "#E0E8F0",
    "titleBar.border": "#2C3540",

    // --- Status Bar (Subtle Info Strip) ---
    "statusBar.background": "#0F131A",
    "statusBar.foreground": "#7E8C9A",
    "statusBar.border": "#2C3540",
    "statusBar.noFolderBackground": "#0F131A",
    "statusBar.debuggingBackground": "#E06C75", // Clearer red for debugging

    // --- Panel & Terminal (Unified with Editor Background) ---
    "panel.background": "#0B0E14",
    "panel.border": "#2C3540",
    "panelTitle.activeForeground": "#E0E8F0",
    "panelTitle.inactiveForeground": "#7E8C9A",

    // --- Terminal ANSI Colors (The "Hacker Style" Pop!) ---
    // These colors are crucial for the "hacker terminal" feel.
    // They are vibrant, but chosen to be harmonious.
    "terminal.background": "#0B0E14",
    "terminal.foreground": "#E0E8F0",
    "terminal.selectionBackground": "#2A5B8066",

    "terminal.ansiBlack": "#2A2F3A", // Deeper, richer black
    "terminal.ansiRed": "#E76F7C", // Vibrant, but not harsh, red
    "terminal.ansiGreen": "#73DDAA", // **PURER, HACKER GREEN!**
    "terminal.ansiYellow": "#F7E16D", // Bright, clear yellow
    "terminal.ansiBlue": "#5BA9E2", // Energetic blue
    "terminal.ansiMagenta": "#CC88D9", // Punchy magenta
    "terminal.ansiCyan": "#66E2F5", // Luminous cyan
    "terminal.ansiWhite": "#E0E8F0", // Clean white

    "terminal.ansiBrightBlack": "#6A7B8E", // Brighter muted black
    "terminal.ansiBrightRed": "#FF8A96",
    "terminal.ansiBrightGreen": "#88FFC9", // Brighter hacker green
    "terminal.ansiBrightYellow": "#FFF18A",
    "terminal.ansiBrightBlue": "#7EC2FA",
    "terminal.ansiBrightMagenta": "#E0A0F0",
    "terminal.ansiBrightCyan": "#88F5FF",
    "terminal.ansiBrightWhite": "#F0F6FC",

    // --- Scrollbars (Barely There) ---
    "scrollbarSlider.background": "#3A455230",
    "scrollbarSlider.hoverBackground": "#3A455250",
    "scrollbarSlider.activeBackground": "#3A455270",

    // --- Input & Dropdown ---
    "input.background": "#1B2028",
    "input.foreground": "#E0E8F0",
    "input.border": "#3A4552",
    "input.placeholderForeground": "#7E8C9A",
    "inputOption.activeBackground": "#2A5B80", // Active input option
    "inputOption.activeBorder": "#69FFC9",

    "dropdown.background": "#1B2028",
    "dropdown.foreground": "#E0E8F0",
    "dropdown.border": "#3A4552",

    // --- Button ---
    "button.background": "#2E8D50", // More vibrant green button
    "button.foreground": "#ffffff",
    "button.hoverBackground": "#3DA060",

    // --- List/Tree ---
    "list.activeSelectionBackground": "#2A5B80",
    "list.activeSelectionForeground": "#ffffff",
    "list.inactiveSelectionBackground": "#21262d",
    "list.hoverBackground": "#1D222B",
    "list.focusBackground": "#2A5B8066",
    "list.highlightForeground": "#69FFC9", // Highlighted text in lists

    // --- Editor Widget ---
    "editorWidget.background": "#1B2028",
    "editorWidget.border": "#3A4552",
    "editorSuggestWidget.background": "#1B2028",
    "editorSuggestWidget.border": "#3A4552",
    "editorSuggestWidget.selectedBackground": "#2A5B8040", // More subtle selection

    // --- Peek View ---
    "peekView.border": "#69FFC9",
    "peekViewEditor.background": "#0B0E14",
    "peekViewResult.background": "#1B2028",
    "peekViewTitle.background": "#2A5B80",

    // --- Notifications ---
    "notificationCenter.border": "#3A4552",
    "notificationCenterHeader.background": "#1B2028",
    "notifications.background": "#1B2028",
    "notifications.border": "#3A4552",

    // --- Extensions ---
    "extensionButton.prominentBackground": "#2E8D50",
    "extensionButton.prominentHoverBackground": "#3DA060",

    // --- Git Decorations ---
    "gitDecoration.addedResourceForeground": "#73DDAA", // Green for added files
    "gitDecoration.modifiedResourceForeground": "#5BA9E2", // Blue for modified
    "gitDecoration.deletedResourceForeground": "#E76F7C", // Red for deleted
    "gitDecoration.untrackedResourceForeground": "#F7E16D", // Yellow for untracked
    "gitDecoration.conflictingResourceForeground": "#CC88D9", // Magenta for conflicts
    "gitDecoration.ignoredResourceForeground": "#6A7B8E" // Muted for ignored
  },
  "tokenColors": [
    // --- Comments (The requested "Hacker Pure Green"!) ---
    {
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#178d00", // Bright, clear, purer green!
        "fontStyle": "italic"
      }
    },

    // --- Keywords (Vibrant Purple) ---
    {
      "scope": [
        "keyword",
        "storage.type",
        "storage.modifier",
        "keyword.control",
        "keyword.operator.new",
        "keyword.other.using",
        "keyword.other.import",
        "keyword.type" // Added for clarity
      ],
      "settings": {
        "foreground": "#CC88D9", // Richer, more saturated purple
        "fontStyle": "bold"
      }
    },

    // --- Strings (Bright, Clear Green) ---
    {
      "scope": [
        "string",
        "string.quoted",
        "string.template",
        "punctuation.definition.string",
        "markup.inline.raw"
      ],
      "settings": {
        "foreground": "#73DDAA" // Harmonized with comment green, but slightly different shade
      }
    },

    // --- Numbers & Constants (Warm Gold) ---
    {
      "scope": [
        "constant.numeric",
        "constant.language",
        "constant.character",
        "constant.other",
        "variable.language.this" // Often good to highlight 'this' differently
      ],
      "settings": {
        "foreground": "#F7E16D" // Brighter, more golden yellow
      }
    },

    // --- Functions (Bright Sky Blue) ---
    {
      "scope": [
        "entity.name.function",
        "support.function",
        "meta.function-call.generic",
        "variable.function",
        "entity.name.method" // For methods
      ],
      "settings": {
        "foreground": "#5BA9E2", // Vibrant, clear blue
        "fontStyle": "bold"
      }
    },

    // --- Classes & Types (Energetic Cyan) ---
    {
      "scope": [
        "entity.name.type",
        "entity.name.class",
        "support.class",
        "entity.other.inherited-class",
        "storage.type.class",
        "entity.name.namespace",
        "entity.name.scope-resolution" // For namespaces/modules
      ],
      "settings": {
        "foreground": "#66E2F5", // Luminous cyan
        "fontStyle": "bold"
      }
    },

    // --- Variables (Clean White/Off-White) ---
    {
      "scope": [
        "variable",
        "entity.name.variable",
        "meta.definition.variable.name",
        "support.variable"
      ],
      "settings": {
        "foreground": "#E0E8F0"
      }
    },

    // --- Object Properties (Subtle Light Blue) ---
    {
      "scope": [
        "meta.object-literal.key",
        "support.type.property-name",
        "variable.other.property",
        "variable.other.object.property",
        "entity.name.tag.yaml"
      ],
      "settings": {
        "foreground": "#7EC2FA" // Slightly brighter, softer blue
      }
    },

    // --- HTML/XML Tags (Soft, but distinct red) ---
    {
      "scope": ["entity.name.tag", "punctuation.definition.tag", "markup.list"],
      "settings": {
        "foreground": "#E76F7C" // Clear, but not aggressive, red
      }
    },

    // --- Attributes (Warm Golden Yellow) ---
    {
      "scope": ["entity.other.attribute-name", "meta.attribute"],
      "settings": {
        "foreground": "#F7E16D" // Harmonized with numbers/constants
      }
    },

    // --- Punctuation (Muted but Visible Grey) ---
    {
      "scope": [
        "punctuation",
        "punctuation.separator",
        "punctuation.terminator",
        "punctuation.definition",
        "meta.brace",
        "meta.block"
      ],
      "settings": {
        "foreground": "#7E8C9A" // Muted but clear grey
      }
    },

    // --- Operators (Bright Cyan Accent) ---
    {
      "scope": [
        "keyword.operator",
        "keyword.operator.arithmetic",
        "keyword.operator.logical",
        "keyword.operator.comparison",
        "keyword.operator.assignment" // Added for common assignment ops
      ],
      "settings": {
        "foreground": "#69FFC9" // Matches cursor, strong visual cue
      }
    },

    // --- Regex (Softer Purple) ---
    {
      "scope": ["string.regexp", "constant.character.escape"],
      "settings": {
        "foreground": "#D0BFFF" // Softer purple for regex
      }
    },

    // --- JSON Keys (Distinct Blue, slightly different from object properties) ---
    {
      "scope": [
        "support.type.property-name.json",
        "meta.structure.dictionary.key.json"
      ],
      "settings": {
        "foreground": "#5BA9E2" // Using the function blue for JSON keys
      }
    },

    // --- Markdown Headings (Blue Accent) ---
    {
      "scope": ["markup.heading", "entity.name.section.markdown"],
      "settings": {
        "foreground": "#5BA9E2", // Function blue for headings
        "fontStyle": "bold"
      }
    },
    // Markdown Links
    {
      "scope": ["markup.link", "string.other.link"],
      "settings": {
        "foreground": "#66E2F5", // Cyan for links
        "fontStyle": "underline"
      }
    },
    // Markdown Bold
    {
      "scope": ["markup.bold"],
      "settings": {
        "fontStyle": "bold",
        "foreground": "#F7E16D" // Yellow for bold
      }
    },
    // Markdown Italic
    {
      "scope": ["markup.italic"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#CC88D9" // Magenta for italic
      }
    },
    // Markdown Blockquote
    {
      "scope": ["markup.quote"],
      "settings": {
        "foreground": "#7E8C9A", // Muted grey
        "fontStyle": "italic"
      }
    },

    // --- Invalid/Error (High Contrast) ---
    {
      "scope": ["invalid", "invalid.illegal"],
      "settings": {
        "foreground": "#FFFFFF",
        "background": "#DA3633" // Strong, clear error background
      }
    }
  ]
}